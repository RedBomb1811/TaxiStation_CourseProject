@{
    ViewData["Title"] = "Home Page";
}

<div class="text-left">

</div>
<div class="text-right">
    @{
        if (ViewData["ErrorMessage"] != null)
        {
            Html.ValidationMessage("", ViewData["ErrorMessage"].ToString(), new { @class = "text-danger" });
        }
        else
        {
            <p></p>
        }
    }
    <h1 class="display-4">Welcome</h1>
    @{
        if (User.Identity.IsAuthenticated)
        {
            <p>@Html.Label(User.Identity.Name)</p>
        }
        else
        {
            <p></p>
        }
    }
    @Html.ActionLink("Стать водителем", "Register", "Driver")
    <br />
    @Html.ActionLink("Войти", "Login", "Driver")
    <br />
</div>

