@model TestExample.DB.Turns

@{
    ViewData["Title"] = "Create";
}

<h1>Start</h1>

<h4>Turns</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Start" asp-controller="Turn">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="id_venichle" class="control-label"></label>
                <select name="id_venichle" asp-for="id_venichle" class="form-control" asp-items="ViewBag.id_venichle"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Начать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
