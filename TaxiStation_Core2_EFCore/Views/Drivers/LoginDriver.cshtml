@model TaxiStation_Core2_EFCore.Models.Registrarion.LoginDriver

<h2>Вход на сайт</h2>

<form asp-action="Login" asp-controller="Driver" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label asp-for="Phone_number">Введите номер</label>
            <input type="text" asp-for="Phone_number" />
            <span asp-validation-for="Phone_number" class="text-danger" />
        </div>
        <div class="form-group">
            <label asp-for="Password">Введите пароль</label>
            <input asp-for="Password" />
            <span asp-validation-for="Password" class="text-danger" />
        </div>
        @ViewBag.Message
        <div class="form-group">
            <input type="submit" value="Войти" class="btn" />
        </div>
    </div>
</form>

<a asp-action="Register" asp-controller="Driver">Регистрация</a>

