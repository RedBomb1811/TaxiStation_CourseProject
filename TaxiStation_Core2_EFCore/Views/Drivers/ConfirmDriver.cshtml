
<h1>ConfirmDriver</h1>

<form asp-action="Confirm" asp-controller="Driver" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label>Введите код для @ViewData["Phone_number"]</label>
            <input name="Code" type="number" />
        </div>
        @ViewBag.Message
        <div class="form-group">
            <input type="submit" value="Войти" class="btn" />
        </div>
    </div>
</form>

