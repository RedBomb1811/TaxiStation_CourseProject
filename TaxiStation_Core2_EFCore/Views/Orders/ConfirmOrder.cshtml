<h1>ConfirmOrder</h1>

<form asp-action="Confirm" asp-controller="Order" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label>Ваш номер заказа</label>
            <br />
            <input type="number" name="Id_order" value="@ViewData["Id_order"]" />
            <br />
            <label>Код подтверждения (будет использоваться только для этого заказа)</label>
            <br />
            <input name="Code" type="number" />
        </div>
        @ViewBag.Message
        <div class="form-group">
            <input type="submit" value="Подтвердить" class="btn" />
        </div>
    </div>
</form>


