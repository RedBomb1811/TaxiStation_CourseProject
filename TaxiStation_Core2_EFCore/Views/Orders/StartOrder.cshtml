@model TestExample.DB.Orders

@{
    ViewData["Title"] = "StartOrder";
}

<h1>StartOrder</h1>

<div>
    <h4>Orders</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Номер заказа:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.id_client)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.id_client)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.date_start_order)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.date_start_order)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.id_order_type)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.id_order_type)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.start_point_lat)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.start_point_lat)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.start_point_long)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.start_point_long)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.end_point_lat)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.end_point_lat)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.end_point_long)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.end_point_long)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.pets)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.pets)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.child)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.child)
        </dd>
        <dt class="col-sm-2">
            Клиент завершил поездку:
        </dt>
        <dd id="isEndFromClient" class="col-sm-10">
            @Html.DisplayFor(model => model.client_confirm_end)
        </dd>
    </dl>
</div>
<div>
    <a class="nav-link text-dark" href="/Order/EndOrder/@(Model.id)">Завершить поездку</a>
</div>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        loadData();
        setInterval(loadData, 1000 * 5);
    });

    function loadData() {
        $.ajax({
            url: "/Order/OrderInfo/@(Model.id)",
            type: "GET",
            contentType: "application/json;charset=utf-8",
            dataType: "json",
            success: function (result) {
                var html = '';
                $.each(result, function (key, item) {
                    html += '<input type="checkbox" class="custom-checkbox" disabled="disabled" ';
                    html += item ? 'checked="checked"' : '';
                    html += '/>';
                });
                $('#isEndFromClient').html(html);
            },
            error: function (errormessage) {
                alert(errormessage.responseText);
            }
        });
    }
</script>
